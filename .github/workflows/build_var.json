            "cache-name": "android-x86_64"
        },
        {
            "name": "Android (arm32)",
            "os": "ubuntu-20.04",
            "platform": "android",
            "artifact-extension": "so",
            "flags": "ANDROID_NDK_ROOT=$ANDROID_NDK_LATEST_HOME arch=arm32",
            "cache-name": "android-arm32"
        },
        {
            "name": "Android (arm64)",
            "os": "ubuntu-20.04",
            "platform": "android",
            "artifact-extension": "so",
            "flags": "ANDROID_NDK_ROOT=$ANDROID_NDK_LATEST_HOME arch=arm64",
