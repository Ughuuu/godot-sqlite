{
    "targets": [
        "template_debug",
        "template_release"
    ],
    "jobs": [
        {
            "name": "Android (x86_32)",
            "os": "ubuntu-20.04",
            "platform": "android",
            "artifact-extension": "so",
            "flags": "ANDROID_NDK_ROOT=$ANDROID_NDK_LATEST_HOME arch=x86_32",
            "cache-name": "android-x86_32"
        },
        {
            "name": "Android (x86_64)",
            "os": "ubuntu-20.04",
            "platform": "android",
            "artifact-extension": "so",
